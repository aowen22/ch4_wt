-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Edit/Delete
      %th Rating
      %th Release Date
      %th More Info
  %tbody
    = link_to 'Add new movie', new_movie_path
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= ((link_to 'Edit', edit_movie_path(movie)) +'/'+ (link_to 'Delete', movie_path(movie), :method => :delete))
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

        
        
      